<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.CarSharing" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/on_accent</item>

        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- System bars: clean + modern (works fine without edge-to-edge code) -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Default component styles -->
        <item name="materialButtonStyle">@style/Widget.CarSharing.Button</item>
        <item name="materialCardViewStyle">@style/Widget.CarSharing.Card</item>
    </style>

    <style name="Theme.CarSharing" parent="Base.Theme.CarSharing" />

    <!-- Button styles -->
    <style name="Widget.CarSharing.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="Widget.CarSharing.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- TextInputLayout style -->
    <style name="Widget.CarSharing.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxBackgroundColor">@color/surface_variant</item>
        <item name="boxStrokeColor">@color/divider</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>

    <!-- Card style -->
    <style name="Widget.CarSharing.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <!-- Toolbar style -->
    <style name="Widget.CarSharing.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/primary</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- BottomNavigationView style -->
    <style name="Widget.CarSharing.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="elevation">8dp</item>
    </style>
</resources>